<div id="my_form">
  <%= form_for @message, :remote => true  do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title,:required=>true %>
  </div>
  <div class="field">
    <%= f.label :comment %><br>
    <%= f.text_field :comment,:required=>true %>
  </div>
  
  <div class="field">
    <%= f.submit 'submit'%>
  </div>
  <% end %>
</div>

